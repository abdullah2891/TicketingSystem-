<form {{action 'submitProject' on="submit"}}>
	{{paper-input 
		class="flex-30" 
		label="Add Project"
		placeholder="Projects" 
		value= project
		onChange=(action (mut project))
	}}
</form>

{{#each projects as |project|}}
    {{#paper-item class="md-3-line project-tile pointer"}}
      <div {{action "setProject" project}} class="md-list-item-text">
        <h3>
		{{project.projects}}
		{{#if project.show}}
			  {{#paper-button onClick=(action "deleteProject" project)}}
				{{paper-icon "delete"}}
				{{#paper-tooltip position=true}}
				    Delete Project
				 {{/paper-tooltip}}
			  {{/paper-button}}
		{{/if}}
	</h3>

      </div>
      {{paper-divider}}
    {{/paper-item}}
  {{/each}}

